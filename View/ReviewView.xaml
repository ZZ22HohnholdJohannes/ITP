<Page x:Class="Reserve_iT.View.ReviewView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Reserve_iT.View"
      xmlns:conv="clr-namespace:Reserve_iT.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="ReviewView">

  <Page.Resources>
    <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
  </Page.Resources>
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Erste Bewertungsbox -->
    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
      <TextBox Width="400" Height="50" Text="Bewertungen"/>
      <StackPanel Orientation="Vertical" Margin="5">
        <Button Content="Y" Width="30" Height="30" Background="Orange"  Visibility="{Binding isAdminLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}"/>
        <Button Content="N" Width="30" Height="30" Background="Orange"  Visibility="{Binding isAdminLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}"/>
      </StackPanel>
    </StackPanel>

    <!-- Datenbankverbindung Anfang-->
    <ListView ItemsSource="{Binding Reviews}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Vertical" Margin="5">
            <TextBlock Text="Review ID:" FontWeight="Bold"/>
            <TextBlock Text="{Binding ReviewID}" />

            <TextBlock Text="Order ID:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding OrderID}" />

            <TextBlock Text="Review Text:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding ReviewText}" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
              <TextBlock Text="Published:" FontWeight="Bold"/>
              <CheckBox IsChecked="{Binding Published}" IsEnabled="False" Margin="5,0,0,0"/>
            </StackPanel>
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <!-- Datenbankverbindung Ende -->

    <!-- Dritte Bewertungsbox -->
    <TextBox Grid.Row="2" Width="400" Height="50" Margin="5"/>

    <!-- Bewerten Button -->
    <Button Grid.Row="3" Content="Bewerten" Width="100" Height="30" Margin="10" HorizontalAlignment="Right"/>
  </Grid>
</Page>
