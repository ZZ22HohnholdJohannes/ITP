<Page x:Class="Reserve_iT.View.ReviewView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Reserve_iT.View"
      xmlns:conv="clr-namespace:Reserve_iT.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="1000"
      Title="ReviewView">

  <Page.Resources>
    <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <Style x:Key="RoundedButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="#4e4f50"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Padding" Value="10,5"/>
      <Setter Property="FontSize" Value="16"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Grid>
              <Border Background="{TemplateBinding Background}" 
              CornerRadius="10" 
              BorderThickness="{TemplateBinding BorderThickness}" 
              BorderBrush="{TemplateBinding BorderBrush}">
                <Border.Effect>
                  <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
              </Border>
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#746c70"/>
        </Trigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
      <Setter Property="Background" Value="White"/>
      <Setter Property="Foreground" Value="Black"/>
      <Setter Property="Padding" Value="8"/>
      <Setter Property="FontSize" Value="12"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="BorderBrush" Value="#746c70"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="TextBox">
            <Border Background="{TemplateBinding Background}" 
            CornerRadius="5" 
            BorderThickness="{TemplateBinding BorderThickness}" 
            BorderBrush="{TemplateBinding BorderBrush}">
              <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="RoundedTextBlockStyle" TargetType="TextBlock">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Foreground" Value="#4e4f50"/>
      <Setter Property="FontFamily" Value="Consolas"/>
    </Style>
    <Style x:Key="TransparentListViewItemStyle" TargetType="ListViewItem">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ListViewItem">
            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
              <ContentPresenter />
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="Transparent"/>
          <Setter Property="BorderBrush" Value="Transparent"/>
        </Trigger>
        <Trigger Property="IsSelected" Value="True">
          <Setter Property="Background" Value="Transparent"/>
          <Setter Property="BorderBrush" Value="Transparent"/>
        </Trigger>
      </Style.Triggers>
    </Style>
    <Style x:Key="ScrollBarButtonStyle" TargetType="RepeatButton">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderBrush" Value="Transparent"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="RepeatButton">
            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="CustomThumbStyle" TargetType="Thumb">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Thumb">
            <Border Background="#4e4f50" BorderBrush="Gray" BorderThickness="1" CornerRadius="5"/>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="CustomScrollBar" TargetType="ScrollBar">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="Width" Value="10"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ScrollBar">
            <Grid>
              <Track Name="PART_Track" IsDirectionReversed="true">
                <Track.DecreaseRepeatButton>
                  <RepeatButton Command="ScrollBar.LineUpCommand" Style="{StaticResource ScrollBarButtonStyle}" />
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                  <Thumb Style="{StaticResource CustomThumbStyle}" />
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                  <RepeatButton Command="ScrollBar.LineDownCommand" Style="{StaticResource ScrollBarButtonStyle}" />
                </Track.IncreaseRepeatButton>
              </Track>
            </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </Page.Resources>
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="3*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid>
      <Border Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="700" Height="300" CornerRadius="20">
        <Border.Effect>
          <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
      </Border>
      <Border Background="White" Width="700" Height="300" CornerRadius="20" VerticalAlignment="Center">
        <!-- Datenbankverbindung Anfang-->
        <ListView ItemsSource="{Binding Reviews}"  VerticalAlignment="Center" BorderThickness="0" Background="Transparent" 
                  ItemContainerStyle="{StaticResource TransparentListViewItemStyle}">
          <ListView.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBar}"/>
          </ListView.Resources>
          <ListView.ItemTemplate>
            <DataTemplate>
              <Grid Margin="5">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="650" Height="Auto" CornerRadius="20">
                  <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                  </Border.Effect>
                  <!-- Inhalt der anderen Border, nur damit die Höhe von der passt -->
                  <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Review ID:" FontWeight="Bold" 
                               Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                               Style="{StaticResource RoundedTextBlockStyle}"/>
                    <TextBlock Text="{Binding ReviewID}" 
                               Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                               Style="{StaticResource RoundedTextBlockStyle}"/>

                    <TextBlock Text="Order ID:" FontWeight="Bold" Margin="0,5,0,0" 
                               Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                               Style="{StaticResource RoundedTextBlockStyle}"/>
                    <TextBlock Text="{Binding OrderID}" 
                               Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                               Style="{StaticResource RoundedTextBlockStyle}"/>

                    <TextBlock Text="Review Text:" FontWeight="Bold" Margin="0,5,0,0" 
                               Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                               Style="{StaticResource RoundedTextBlockStyle}"/>
                    <TextBlock Text="{Binding ReviewText}" TextWrapping="Wrap"
                               Style="{StaticResource RoundedTextBlockStyle}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                      <TextBlock Text="Published:" FontWeight="Bold" 
                                 Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                                 Style="{StaticResource RoundedTextBlockStyle}"/>
                      <CheckBox IsChecked="{Binding Published}" IsEnabled="False" Margin="5,0,0,0" Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                  </StackPanel>
                </Border>
                <Border Background="White" Width="650" Height="Auto" BorderBrush="Gray" CornerRadius="20" VerticalAlignment="Center">
                  <StackPanel Orientation="Vertical" Margin="10" Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Review ID:" FontWeight="Bold" 
                           Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                           Style="{StaticResource RoundedTextBlockStyle}"/>
                    <TextBlock Text="{Binding ReviewID}" 
                           Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                           Style="{StaticResource RoundedTextBlockStyle}"/>

                    <TextBlock Text="Order ID:" FontWeight="Bold" Margin="0,5,0,0" 
                           Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                           Style="{StaticResource RoundedTextBlockStyle}"/>
                    <TextBlock Text="{Binding OrderID}" 
                           Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                           Style="{StaticResource RoundedTextBlockStyle}"/>

                    <TextBlock Text="Review Text:" FontWeight="Bold" Margin="0,5,0,0" 
                           Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                           Style="{StaticResource RoundedTextBlockStyle}"/>
                    <TextBlock Text="{Binding ReviewText}" TextWrapping="Wrap"
                           Style="{StaticResource RoundedTextBlockStyle}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                      <TextBlock Text="Published:" FontWeight="Bold" 
                             Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                             Style="{StaticResource RoundedTextBlockStyle}"/>
                      <CheckBox IsChecked="{Binding Published}" IsEnabled="False" Margin="5,0,0,0" Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                  </StackPanel>
                </Border>
                <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Right" Margin="0,15,35,0">
                  <Button Content="Y" Width="30" Height="30" Margin="0,0,0,10"
                          Style="{StaticResource RoundedButtonStyle}"
                          Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                  <Button Content="N" Width="30" Height="30"
                          Style="{StaticResource RoundedButtonStyle}"
                          Visibility="{Binding DataContext.isAdminLoggedIn, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
              </Grid>
            </DataTemplate>
          </ListView.ItemTemplate>
        </ListView>
      </Border>
    </Grid>

    <!-- Datenbankverbindung Ende -->

    <!-- Dritte Bewertungsbox -->
    <TextBox Grid.Row="1" Width="400" Height="50" Margin="5"/>

    <!-- Bewerten Button -->
    <Button Grid.Row="1" Content="Bewerten" Width="100" Height="30" Margin="10" HorizontalAlignment="Right"/>
  </Grid>
</Page>